// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  createdAt DateTime @default(now())
  invoices Invoice[]
}

model Inventory {
  id          String    @id @default(uuid())
  name        String
  description String?
  products    Product[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String
  image       String
  price       Int
  stock       Int
  description String
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invoice {
  id      Int      @id @default(autoincrement())
  email   String
  name    String
  phone   String
  items   String   // JSON string
  total   Decimal
  date    DateTime @default(now())
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

